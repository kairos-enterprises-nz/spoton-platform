# ==============================================
# SPOTON BACKEND ENVIRONMENT CONFIGURATION
# ==============================================

# Django Core Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
JWT_SIGNING_KEY=your-jwt-signing-key-here

# Database Configuration - Primary PostgreSQL
# For Docker: use container name (dev-db-1), for local: use localhost
DB_HOST=localhost
DB_PORT=5433
DB_NAME=spoton
DB_USER=postgres
DB_PASSWORD=pick.pock

# TimescaleDB Configuration - Time-series data
# For Docker: use container name (dev-timescaledb-1), for local: use localhost
# Unified database configuration (replaces separate TimescaleDB)
# All schemas (public, tenant_*, metering_processed, wits, raw_imports, archive) in single database

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=True

# Multi-tenant Settings
DEFAULT_TENANT_SLUG=utility-byte-default
REQUIRE_TENANT_HEADER=False

